<div class="container">
    <h3 class="text-center">Agregar Nuevo Usuario</h3>
<div class="row">
        <%= form_for @usu do |f| %>

    <div class="col-xs-1">
            <%= f.label :username %>
            <%= f.text_field :username %>
        </div>
        <div class="col-xs-1">
            <%= f.label :name %>
            <%= f.text_field :name %>
        </div>

        <div class="col-xs-1">
            <%= f.label :document %>
            <%= f.text_field :document %>
        </div>

        <div class="col-xs-1">
            <%= f.label :email %>
            <%= f.text_field :email, type:"email"%>
        </div>


        <div class="col-xs-1">
            <%= f.label :telephone %>
            <%= f.number_field :telephone %>
        </div>
</div>

    <div class="col-xs-1">
            <%= f.label :password %>
            <%= f.text_field :password, type:"password" %>
    </div>
      <div class="col-xs-1">
            <%= f.label :age %>
            <%= f.number_field :age %>
      </div>
        <div>
            <%= f.submit class:"btn btn-success" %>
        </div>
        <% end %>
</div>